/* pages/profile/profile.wxss */
/* 将头像修改圆形 */
/* 父元素相对定位 */
.profile{
  background-color: #f68170;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;
}
.profile-img{
  position: absolute;
  width:200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  left:50%;
  transform: translate(-50%,60rpx)
}

.profile-name{
  position: absolute;
  left: 50%;
  top: 65%;
  font-size:36rpx;
  margin-top:20rpx; 
  transform: translate(-50%,0)
}

.userInfo{
  margin: 10rpx 25rpx;
  color:#666;
  display: flex;
  justify-content: space-between;
}