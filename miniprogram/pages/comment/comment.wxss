/* pages/comment/comment.wxss */
.detail-container{
  height: 400rpx;
  opacity: 0.9;
  filter: blur(40rpx);/*模糊滤镜*/
}
.detail-mask{
  width: 100%;
  height: 400rpx;
  background-color: #333;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
/* 电影的详细信息 */
.detail-info{
  /* 显示模糊图片的上方 */
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  display: flex;
  padding: 20rpx;
}
/* 图片大小 */
.detail-img{
  width:280rpx;
  height: 90%;
  margin-right:24rpx; 
}
/* 右侧区域  电影内容 */
.detail{
  line-height: 60rpx;
  font-size: 32rpx;
  color: #fff;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
}
.detail-nm{
  font-size: 46rpx;
}
.detail .detail-sc{
  color: #fc0;
  font-size: 42rpx;
}
.desc{
  color: #555;
  font-size: 28rpx;
  padding:20rpx;
}
/* 上传图片 */
.commentImg,.aTextImg{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.comment-img{
  width:30%;
  height: 220rpx;
  margin: 10rpx;
}

.comment,.comArea{
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  margin-top: 20rpx;
  padding: 15rpx;
}

/* 头像 */
.comAvatar{
  float: left;
  display: block;
  width: 78rpx;
  height: 78rpx;
  overflow: hidden;
  border-radius: 50%;
  margin:0 10rpx ;
}
/* 评论内容 */
.areaText{
  border-top:1rpx solid #ccc;
  padding: 5rpx; 
}


